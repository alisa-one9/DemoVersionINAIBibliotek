<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@color/tan_background"
    android:minHeight="150dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_book"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:src="@drawable/buch_uchet" />


    <TextView
        android:id="@+id/name_of_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/image_book"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        tools:text="name_of_book" />

    <TextView
        android:id="@+id/author_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_of_book"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/image_book"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        tools:text="author_of_book" />

    <Button
        android:id="@+id/btn_borrow"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="132dp"
        android:layout_marginRight="15dp"
        android:text="забронировать книгу"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="170dp"
        android:layout_marginRight="15dp"
        android:text="краткое описание"
        android:textSize="10sp" />

</RelativeLayout>



